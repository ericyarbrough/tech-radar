{
  "name": "eric-tech-radar",
  "version": "2021.0.1",
  "description": "Visualizing my technology choices",
  "homepage": "https://ericyarbrough.github.io/tech-radar",
  "license": "MIT",
  "directories": {
    "doc": "docs"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.16.3",
    "@babel/preset-env": "^7.16.0",
    "@parcel/transformer-sass": "^2.0.1",
    "eslint": "^8.2.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.25.3",
    "htmllint": "^0.7.2",
    "parcel": "^2.0.1",
    "rimraf": "^3.0.2"
  },
  "scripts": {
    "start": "parcel src/index.html --port 3000",
    "build": "yarn clean && parcel build src/index.html --dist-dir docs/ --no-source-maps --public-url tech-radar",
    "clean": "rimraf docs",
    "lint": "npm run lint:js && npm run lint:html",
    "lint:js": "eslint src/*.js",
    "lint:html": "htmllint src/*.html"
  }
}
